<?xml version="1.0" encoding="utf-8"?>
<com.shunhaoluo.onlyweather.WeatherLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shunhaoluo.onlyweather.MainActivity">

    <View
        android:id="@id/iso_weather_top_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onlyweather_top_height"
        android:background="#666"/>
    <View
        android:id="@id/iso_weather_middle_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onlyweather_middle_height"
        android:background="#999"/>
    <ListView
        android:id="@id/iso_weather_bottom_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaa">
    </ListView>
</com.shunhaoluo.onlyweather.WeatherLayout>
